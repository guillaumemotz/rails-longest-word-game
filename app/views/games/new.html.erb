<h1>New game</h1>
<div class="tab_of_letters">
  <% @letters.each do |letter| %>
    <div class= "blue_box"><%= letter %></div>
  <% end %>
</div>


<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word" class="gamer_input">
  <input type="submit" class="btn" placeholder="play">
</form>
